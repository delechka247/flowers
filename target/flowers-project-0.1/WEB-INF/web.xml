<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

    <servlet>
        <servlet-name>registration-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration-servlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main-servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profile-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile-servlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>applications-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.ApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>applications-servlet</servlet-name>
        <url-pattern>/applications</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>settings-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.SettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>settings-servlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>catalog-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.CatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalog-servlet</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product-servlet</servlet-name>
        <servlet-class>ru.itis.inf.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>product-servlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>


</web-app>